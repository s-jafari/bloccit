<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">

    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
    <% unless @question.resolved %>
      <%= link_to "Mark as solved", question_solved_path(@question.id), method: :put, class: 'btn btn-primary', data: {confirm: 'Has this question really been solved?'} %>
    <% end %>
  </div>
</div>
